{
  "name": "timothie-jewelry-customizer",
  "version": "1.0.0",
  "description": "Drag-and-drop jewelry customizer for Timothie & Co",
  "main": "src/js/main.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "build:stats": "webpack --mode production --json > webpack-stats.json",
    "test": "node test-compilation.js && jest",
    "test:compile": "node test-compilation.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "node test-compilation.js && jest --ci --coverage --watchAll=false",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "lint:check": "eslint src/js/**/*.js --max-warnings 0",
    "format": "prettier --write \"src/**/*.{js,css,html,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,md}\"",
    "quality": "npm run lint:check && npm run format:check && npm run test:ci",
    "prepare": "husky install",
    "perf:audit": "npm run build && node scripts/performance-audit.js",
    "size:check": "npm run build && bundlesize",
    "preview": "npm run build && npx serve dist"
  },
  "keywords": ["jewelry", "customizer", "drag-drop", "konva", "canvas"],
  "author": "Timothie & Co",
  "license": "MIT",
  "dependencies": {
    "konva": "^9.2.0",
    "@supabase/supabase-js": "^2.38.0"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "file-loader": "^6.2.0",
    "babel-loader": "^9.1.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "core-js": "^3.32.0",
    "mini-css-extract-plugin": "^2.7.6",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^5.3.9",
    "webpack-bundle-analyzer": "^4.9.0",
    "compression-webpack-plugin": "^10.0.0",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "bundlesize": "^0.18.1",
    "serve": "^14.2.0",
    "eslint": "^8.44.0",
    "@eslint/js": "^9.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "jest": "^29.6.0",
    "@jest/globals": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/dom": "^9.3.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "bundlesize": [
    {
      "path": "./dist/vendors.*.js",
      "maxSize": "300kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/main.*.js",
      "maxSize": "150kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/cart.*.js",
      "maxSize": "80kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/css/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/js/utils/__tests__/setup.js"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/utils/__tests__/**",
      "!src/js/debug/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html,md}": [
      "prettier --write"
    ]
  }
}